{
    "name": "real-estate-platform",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "frontend",
      "website/frontend"
    ],
    "scripts": {
      "start:dapp": "cd frontend && npm start",
      "start:website": "cd website/frontend && npm start",
      "start:backend": "cd website/backend && python manage.py runserver",
      "dev": "concurrently \"npm run start:dapp\" \"npm run start:website\" \"npm run start:backend\""
    },
    "devDependencies": {
      "concurrently": "^8.0.0"
    }
  }